      "@biomejs/biome": "^2.2.0",
      "react": "^18.3.1",
      "react-dom": "^18.3.1"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@changesets/cli": "^2.29.6",
    "@types/node": "catalog:",
    "bumpp": "^10.2.3",
