  "scripts": {
    "play:react": "bun run --filter=./packages/playground/react dev",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "dev": "bun run --filter=./packages/core dev",
    "build": "bun run --filter=./packages/core build",
    "release": "bun run build && changeset && changeset version && changeset publish",
    "bump": "bumpp",
    "prepare": "lefthook install",
    "hooks:install": "lefthook install",
    "hooks:uninstall": "lefthook uninstall"
  },
  "workspaces": {
    "packages": [
      "packages/core",
      "packages/playground/react"
    ],
    "catalog": {
      "vite": "^7.1.3",
      "typescript": "^5.9.2",
      "@types/react": "^18.3.23",
